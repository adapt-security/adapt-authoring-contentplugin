{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$anchor": "contentplugin",
  "description": "An Adapt framework plugin",
  "type": "object",
  "properties": {
    "name": {
      "description": "Unique name for the plugin",
      "type": "string"
    },
    "displayName": {
      "description": "User-friendly name for the plugin",
      "type": "string"
    },
    "version": {
      "description": "Version number for the plugin",
      "type": "string"
    },
    "framework": {
      "description": "",
      "type": "string"
    },
    "isEnabled": {
      "description": "",
      "type": "boolean",
      "default": true
    },
    "type": {
      "description": "",
      "type": "string"
    },
    "targetAttribute": {
      "description": "",
      "type": "string"
    },
    "description": {
      "description": "",
      "type": "string"
    },
    "pluginDependencies": {
      "description": "",
      "type": "object"
    }
  },
  "required": ["framework", "name", "type", "version"]
}
