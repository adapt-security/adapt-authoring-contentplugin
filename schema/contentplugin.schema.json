{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$anchor": "contentplugin",
  "type": "object",
  "required": [
    "framework",
    "name",
    "type",
    "version"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "displayName": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "framework": {
      "type": "string"
    },
    "isEnabled": {
      "type": "boolean",
      "default": true
    },
    "type": {
      "type": "string"
    },
    "targetAttribute": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "properties": {
      "type": "object"
    },
    "dir": {
      "type": "string"
    },
    "schemaName": {
      "type": "string"
    }
  }
}
